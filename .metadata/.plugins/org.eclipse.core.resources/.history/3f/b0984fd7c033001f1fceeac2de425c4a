import estudiantesYcriaturas.*

object hogwarts {
	const estudiantes = []
	
}

class Profesor {
	var property materia = ""
	
}

class materiaMagica {
	var property materia = ""
	var property profesor = null
	var hechizo = null
	const estudiantesLista = []
	
	method incribirEstudiante(estudiante) = estudiantesLista.add(estudiante)
	
	method cancelarInscripcion(estudiante) = estudiantesLista.remove(estudiante)
	
	method asignarHechizo(embrujo) {hechizo = embrujo}
	
	method Actual() = hechizo
	
	method cambiarHechizoActual(embrujo) {hechizo = embrujo}
	
	method hacerPractica(criatura) = estudiantesLista.filter({estudiante => hechizo.puedeRealizarlo(estudiante)})
														 .forEach({estudiante => estudiante.lanzarHechizo(hechizo)
		                         					     criatura.recibirHechizo(hechizo)})
	
}