import wollok.game.*
import player.*
import items.*

object snake {
	
    method personaje(){
		const jugador = new CabezaDeSnake()
		const parte1 = new ParteDeSnake()
		const colaSnake = new Cola(image = "cola.png")
		game.addVisual(jugador)
		game.addVisual(parte1)
		game.addVisual(colaSnake)
		
		lasPartesDeSnake.add(jugador)
		lasPartesDeSnake.add(parte1)
		lasPartesDeSnake.add(colaSnake)
		
		keyboard.up().onPressDo({jugador.siguienteaDondeIr("up")})
		keyboard.down().onPressDo({jugador.siguienteaDondeIr("down")})
		keyboard.left().onPressDo({jugador.siguienteaDondeIr("left")})
		keyboard.right().onPressDo({jugador.siguienteaDondeIr("right")})
		
		//game.onTick(400, "movimientoDelJugador",{jugador.moverse()})
		game.onTick(400, "movimientoDelcuerpo",{parte1.moverse()})
		game.onTick(400, "movimientoDeLaCola",{colaSnake.moverse()})
	}
	
	 method iniciar(){
		game.cellSize(32)
		game.height(15)
		game.width(15)
		pantallaDeInicio.iniciar()
	    game.start()
	    
	}
	method reiniciarPartida() {                              
		game.addVisual("fondoJuego.")
		self.personaje()
	}
	
	
}

